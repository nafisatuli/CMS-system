            {{#select post.status}}

            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>

            {{/select}}
        </select>
    </div> --}}
    <div class="form-check">
        <label for="allowComments" class="form-check-label">
            <input name="allowComments" type="checkbox" {{#if post.allowComments}} checked="checked"
                {{/if}}class="form-check-input" id="allowComments">
            Allow Comment
        </label>
    </div>
    <div class="form-group">
        <label for="body">Description</label>
        <textarea name='body' cols='30' rows='10' class="form-control" id='body'>{{post.body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update Post</button>
</form>