
<h1 class="stylePost">Comments <span style='font-size:50px;'>&#128516;</span></h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Owner</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
      
    {{#each comments}}

    <tr>
      <td>{{id}}</td>
      <td>{{user.firstName}} {{user.lastName}}</td>
      
      <td><input data-id={{id}} type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
       <td>{{generateDate date 'MMMM Do YYYY'}}</td>
      <td>
         <form action="/admin/comments/{{id}}?_method=DELETE" method="post"> 
           
               <button type="submit" class="btn btn-danger">Delete</button>
         </form>

      </td>
    </tr> 

    {{/each}}
  </tbody>
</table>