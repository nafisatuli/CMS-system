    <div class="row">

        
        <div class="col-lg-8">

          
          <h1 class="mt-4 postTitle">{{post.title}}</h1>

     
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}} {{post.user.lastName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateDate date "MMMM Do YYYY"}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
           <p class="lead postBody">{{post.body}}</p>

          <hr>

       {{#if user}}

        {{#if post.allowComments}}
          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
              <form action="/admin/comments" method="post">
                <div class="form-group">
                  <textarea name="body" class="form-control" rows="3"></textarea>
                  <input type="hidden" name="id" value="{{post.id}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>

          {{else}}
          <h3 class="commentHead">Comments are not allowed for this post</h3> 
          <br>
          <hr>

          {{/if}}

       {{else}}
              
          <h4 class="commentHead">You need to <a href="/login">login</a> to comment</h4>
          <br>
          <hr>
       {{/if}}



            {{#each post.comments}}

          <!-- Single Comment -->
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
              
              {{body}}

            </div>
          </div>

            {{/each}}




