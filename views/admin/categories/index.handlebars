<div class="row">
     <div class="col-sm-4">
       <h1>Create Category</h1>
       <form action="/admin/categories/create" method="post">
             <div class="form group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter Title" class="form-control">
            </div>

         <button class="btn btn-primary">Create Category</button>
       </form>
    </div>

</div>
<br>

 <hr>
<div class="row">
 
       <div class="col-sm-8">
        <h1>categories</h1>
        <table class="table">

             <thead>
                 <tr>
                     <th>Id</th>
                     <th>Name</th>
                 </tr>
             </thead>
              <tbody>
               {{#each categories}}
                 

                  <tr>
                      <td>{{id}}</td>
                      <td>{{name}}</td>
                      <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                  </tr>

                {{/each}}

              </tbody>



        </table>




    </div>

</div>
   

  

