    <script>

        $("[name='approveComment']").bootstrapSwitch();
        $(document).ready(()=>{

           $("[name='approveComment']").on('switchChange.bootstrapSwitch',function(e,data){
              
            const id=$(this).attr('data-id');
            //console.log(id);
            //console.log(data);
            //send ajax request
              $.ajax({

                   type:"POST",
                   url:'/admin/comments/approve-comment', //end point
                   data:{id:id,approveComment:data},
                   cache:false,
                   success:function(data){

                          toastr.success(`Comment with id ${data._id} is updated`);

                   }

              });

          });

        });


    </script>